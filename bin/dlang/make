# Build D applications
set -eu

# Set default arguments if none are passed
if test $# -eq 0
then
    set -- all test
fi

# Paths
r=$(dirname $0)/../..
beaver=$r/bin/beaver

# Use general dlang utilities
. $r/lib/dlang.sh

# Generic makd variables to export
makd_vars="F V"

# Set the DC and DVER environment variables and export them to docker
set_dc_dver
export BEAVER_DOCKER_VARS="${BEAVER_DOCKER_VARS:-} $makd_vars DC DVER D2_ONLY"

# First convert code if we are building a D2 version of a D1/2 project
if test "$D2_ONLY" = false -a "$DVER" -eq 2
then
    $beaver make d2conv
fi

# Then just build
$beaver make "$@"
