d="$(dirname "$0").."
. $d/lib/args.sh

if test -n "$BEAVER_CONTEXT_DIR"
then
    cp $BEAVER_CONTEXT_DIR/Dockerfile* .
    cp $BEAVER_CONTEXT_DIR/beaver.Dockerfile .
    cp $BEAVER_CONTEXT_DIR/.dockerignore .
fi

# Look for a suitable image name
img="${BEAVER_DOCKER_IMG:-$(git config hub.upstream)}"
img="${img:-$TRAVIS_REPO_SLUG}"
img="${img:-beaver}"

# Build the docker image
set -xe
docker build --pull -t "$img" "$@"
