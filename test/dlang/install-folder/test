set -xeu

# Test basic usage
for DIST in xenial
do
    for DMD in "2.067.1-*" "2.077.1-*"
    do
        export DIST DMD
        beaver dlang install -d ./context -t image
        cat context/beaver.Dockerfile.generated
        rm context/beaver.Dockerfile.generated
        (cd context && BEAVER_DOCKER_IMG=image beaver dlang make)
        for f in make-all.stamp make-unittest.stamp make-integrationtest.stamp \
                make-d2conv.stamp
        do
            test -f "context/$f"
            rm "context/$f"
        done
    done
done
